---
import MainLayout from "../layouts/MainLayout.astro";

const userName = "Guest User";
const userAvatar = "https://placehold.co/200x200/1a1a2e/e50914?text=G";
---

<MainLayout title="Profile - HuaStream">
   <div class="container mx-auto px-4 py-8 max-w-md">
      <!-- Profile Card -->
      <div class="bg-surface rounded-2xl border border-highlight p-6 mb-6">
         <!-- Avatar & Name -->
         <div class="flex flex-col items-center text-center mb-6">
            <img
               id="profile-avatar"
               src={userAvatar}
               alt="Avatar"
               class="w-24 h-24 rounded-full border-4 border-accent mb-4"
            />
            <h1 id="profile-name" class="text-2xl font-bold">{userName}</h1>
            <p class="text-secondary text-sm">Welcome back!</p>
         </div>

         <!-- Quick Stats -->
         <div class="grid grid-cols-3 gap-4 mb-6">
            <div class="text-center">
               <span class="block text-xl font-bold text-accent">0</span>
               <span class="text-xs text-secondary">Watched</span>
            </div>
            <div class="text-center">
               <span id="favorites-count" class="block text-xl font-bold"
                  >0</span
               >
               <span class="text-xs text-secondary">Favorites</span>
            </div>
            <div class="text-center">
               <span class="block text-xl font-bold">0</span>
               <span class="text-xs text-secondary">Downloads</span>
            </div>
         </div>
      </div>

      <!-- Menu Items -->
      <div
         class="bg-surface rounded-2xl border border-highlight overflow-hidden mb-6"
      >
         <a
            href="/schedule"
            class="flex items-center gap-4 p-4 hover:bg-highlight transition-colors border-b border-highlight"
         >
            <div
               class="w-10 h-10 rounded-full bg-highlight flex items-center justify-center text-primary"
            >
               <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><rect width="18" height="18" x="3" y="4" rx="2" ry="2"
                  ></rect><line x1="16" x2="16" y1="2" y2="6"></line><line
                     x1="8"
                     x2="8"
                     y1="2"
                     y2="6"></line><line x1="3" x2="21" y1="10" y2="10"
                  ></line></svg
               >
            </div>
            <div class="flex-1">
               <span class="font-medium">Release Schedule</span>
               <p class="text-xs text-secondary">Check upcoming episodes</p>
            </div>
            <svg
               xmlns="http://www.w3.org/2000/svg"
               width="20"
               height="20"
               viewBox="0 0 24 24"
               fill="none"
               stroke="currentColor"
               stroke-width="2"
               stroke-linecap="round"
               stroke-linejoin="round"
               class="text-secondary"><path d="m9 18 6-6-6-6"></path></svg
            >
         </a>

         <a
            href="/search"
            class="flex items-center gap-4 p-4 hover:bg-highlight transition-colors border-b border-highlight"
         >
            <div
               class="w-10 h-10 rounded-full bg-highlight flex items-center justify-center text-primary"
            >
               <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><circle cx="11" cy="11" r="8"></circle><path
                     d="m21 21-4.3-4.3"></path></svg
               >
            </div>
            <div class="flex-1">
               <span class="font-medium">Search Donghua</span>
               <p class="text-xs text-secondary">Find your favorite series</p>
            </div>
            <svg
               xmlns="http://www.w3.org/2000/svg"
               width="20"
               height="20"
               viewBox="0 0 24 24"
               fill="none"
               stroke="currentColor"
               stroke-width="2"
               stroke-linecap="round"
               stroke-linejoin="round"
               class="text-secondary"><path d="m9 18 6-6-6-6"></path></svg
            >
         </a>

         <a
            href="#"
            class="flex items-center gap-4 p-4 hover:bg-highlight transition-colors border-b border-highlight"
         >
            <div
               class="w-10 h-10 rounded-full bg-highlight flex items-center justify-center text-primary"
            >
               <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><path
                     d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1-1-1.72v-.51a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"
                  ></path><circle cx="12" cy="12" r="3"></circle></svg
               >
            </div>
            <div class="flex-1">
               <span class="font-medium">Settings</span>
               <p class="text-xs text-secondary">App preferences</p>
            </div>
            <svg
               xmlns="http://www.w3.org/2000/svg"
               width="20"
               height="20"
               viewBox="0 0 24 24"
               fill="none"
               stroke="currentColor"
               stroke-width="2"
               stroke-linecap="round"
               stroke-linejoin="round"
               class="text-secondary"><path d="m9 18 6-6-6-6"></path></svg
            >
         </a>

         <a
            href="#"
            class="flex items-center gap-4 p-4 hover:bg-highlight transition-colors"
         >
            <div
               class="w-10 h-10 rounded-full bg-highlight flex items-center justify-center text-primary"
            >
               <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><circle cx="12" cy="12" r="10"></circle><path
                     d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path><path
                     d="M12 17h.01"></path></svg
               >
            </div>
            <div class="flex-1">
               <span class="font-medium">Help & Support</span>
               <p class="text-xs text-secondary">FAQ and contact</p>
            </div>
            <svg
               xmlns="http://www.w3.org/2000/svg"
               width="20"
               height="20"
               viewBox="0 0 24 24"
               fill="none"
               stroke="currentColor"
               stroke-width="2"
               stroke-linecap="round"
               stroke-linejoin="round"
               class="text-secondary"><path d="m9 18 6-6-6-6"></path></svg
            >
         </a>
      </div>

      <!-- Logout Button -->
      <button
         id="logout-btn"
         class="w-full flex items-center justify-center gap-3 p-4 bg-red-500/10 hover:bg-red-500/20 border border-red-500/30 rounded-xl text-red-500 font-medium transition-colors"
      >
         <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline
               points="16 17 21 12 16 7"></polyline><line
               x1="21"
               x2="9"
               y1="12"
               y2="12"></line></svg
         >
         Log Out
      </button>

      <!-- App Version -->
      <p class="text-center text-xs text-secondary mt-6">HuaStream v1.0.0</p>
   </div>
</MainLayout>

<script>
   // Check Auth Session
   const userStr = localStorage.getItem("huastream_user");
   if (!userStr) {
      window.location.href = "/auth/login";
   }

   const profileName = document.getElementById("profile-name");
   const profileAvatar = document.getElementById(
      "profile-avatar",
   ) as HTMLImageElement;
   const favoritesCount = document.getElementById("favorites-count");
   const logoutBtn = document.getElementById("logout-btn");

   // Load User Data
   if (userStr) {
      const user = JSON.parse(userStr);
      if (profileName) profileName.textContent = user.name;
      if (profileAvatar) profileAvatar.src = user.avatar;
   }

   // Load Stats
   const mylistStr = localStorage.getItem("huastream_mylist");
   if (mylistStr && favoritesCount) {
      const list = JSON.parse(mylistStr);
      favoritesCount.textContent = list.length.toString();
   }

   // Handle Logout
   logoutBtn?.addEventListener("click", () => {
      if (confirm("Are you sure you want to log out?")) {
         localStorage.removeItem("huastream_user");
         window.location.href = "/";
      }
   });
</script>
