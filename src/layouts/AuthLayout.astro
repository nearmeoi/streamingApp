---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Sign In - HuaStream" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#0f0f0f" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-base text-primary antialiased flex items-center justify-center min-h-screen p-4"
  >
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <a href="/" class="text-4xl font-bold tracking-tight text-accent">
          STREAM<span class="text-white">X</span>
        </a>
      </div>
      <slot />
    </div>
  </body>
</html>
