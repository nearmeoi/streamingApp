---
interface Props {
  type?: "text" | "email" | "password" | "search";
  placeholder?: string;
  label?: string;
  name?: string;
  id?: string;
  class?: string;
  required?: boolean;
}

const { type = "text", placeholder, label, name, id, class: className, required = false } = Astro.props;
---

<div class={`flex flex-col gap-1.5 ${className}`}>
  {label && <label for={id} class="text-sm font-medium text-secondary">{label}</label>}
  <input
    type={type}
    name={name}
    id={id}
    placeholder={placeholder}
    required={required}
    class="w-full bg-highlight border border-transparent focus:border-accent text-primary text-sm rounded-lg px-4 py-2.5 placeholder-text-secondary/50 focus:outline-none focus:ring-1 focus:ring-accent transition-all"
  />
</div>
