---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'icon';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  href?: string;
  type?: "button" | "submit" | "reset";
  fullWidth?: boolean;
}

const { variant = 'primary', size = 'md', class: className, href, type = "button", fullWidth = false } = Astro.props;

const baseStyles = "inline-flex items-center justify-center rounded-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent disabled:opacity-50 disabled:pointer-events-none";

const variants = {
  primary: "bg-accent text-white hover:bg-red-700",
  secondary: "bg-highlight text-primary hover:bg-gray-700",
  ghost: "bg-transparent text-primary hover:bg-highlight",
  icon: "p-2 bg-transparent text-primary hover:bg-highlight rounded-full aspect-square",
};

const sizes = {
  sm: "text-xs px-3 py-1.5",
  md: "text-sm px-4 py-2",
  lg: "text-base px-6 py-3",
};

const classes = [
  baseStyles,
  variants[variant],
  variant !== 'icon' ? sizes[size] : '',
  fullWidth ? 'w-full' : '',
  className,
].join(" ");
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <button type={type} class={classes}>
      <slot />
    </button>
  )
}
