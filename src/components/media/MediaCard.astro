---
import type { DonghuaItem } from "../../lib/api";

interface Props {
  media: DonghuaItem;
  showProgress?: boolean;
  progress?: number;
  episode?: string;
}

const { media, showProgress = false, progress, episode = "1" } = Astro.props;

// Ensure slug is clean (no trailing slash)
const cleanSlug = media.slug.endsWith("/")
  ? media.slug.slice(0, -1)
  : media.slug;
const href = `/watch/${cleanSlug}`;
---

<a href={href} class="group relative flex flex-col gap-2 w-full outline-none">
  <div
    class="relative aspect-poster w-full overflow-hidden rounded-lg bg-highlight shadow-sm transition-transform duration-300 group-hover:scale-105 group-focus:ring-2 group-focus:ring-accent"
  >
    <!-- Skeleton Placeholder (visible while image loads) -->
    <div class="absolute inset-0 skeleton"></div>

    <!-- Image -->
    <img
      src={media.poster}
      alt={media.title}
      class="relative h-full w-full object-cover opacity-0 transition-opacity duration-300 group-hover:opacity-100"
      loading="lazy"
      decoding="async"
      onload="this.classList.remove('opacity-0'); this.classList.add('opacity-90');"
    />

    <!-- Gradient Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
    </div>

    <!-- Episode Badge -->
    {
      media.episode && (
        <div class="absolute top-2 left-2">
          <span class="px-1.5 py-0.5 bg-black/60 backdrop-blur-md text-[10px] font-bold text-white rounded">
            {media.episode}
          </span>
        </div>
      )
    }

    {
      showProgress && progress !== undefined && (
        <div class="absolute bottom-0 left-0 right-0 h-1 bg-white/20">
          <div class="h-full bg-accent" style={`width: ${progress}%`} />
        </div>
      )
    }
  </div>

  <div class="flex flex-col gap-0.5">
    <h3
      class="truncate text-sm font-medium text-primary group-hover:text-accent transition-colors"
    >
      {media.title}
    </h3>
  </div>
</a>
